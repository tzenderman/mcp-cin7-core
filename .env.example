CIN7_BASE_URL=https://inventory.dearsystems.com/ExternalApi/v2/
CIN7_ACCOUNT_ID=your-account-id-here
CIN7_API_KEY=your-application-key-here

# ScaleKit OAuth Configuration
SCALEKIT_ENVIRONMENT_URL=https://yourapp.scalekit.com
SCALEKIT_CLIENT_ID=your-client-id
SCALEKIT_CLIENT_SECRET=your-client-secret
SCALEKIT_RESOURCE_ID=res_xxx

# ScaleKit Interceptor Configuration
# Get this secret from ScaleKit Dashboard > Interceptors
SCALEKIT_INTERCEPTOR_SECRET=your-interceptor-secret

# Allowed Emails (comma-separated list)
# Only users with these emails can sign up or create sessions
# Leave empty to allow all authenticated users
ALLOWED_EMAILS=user1@example.com,user2@example.com

# MCP Server Base URL (for OAuth resource identifier)
SERVER_URL=http://localhost:3000
HOST=0.0.0.0
PORT=3000
